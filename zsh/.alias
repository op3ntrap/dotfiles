# SYSTEM
alias kernelfailsafe='sudo update-grub && sudo mkinitcpio -P'
alias rm='rm'
alias df='df -h'
alias chowner='sudo chown risan:risan'
alias du='du -h'
alias dream='sudo powerpill -Syyw && sudo pacman -Syyu'
# GIT
alias repup='git add . && git commit -m "Routine Update"'
# RANGER
alias rr='ranger'
alias vv='ranger /home/Downloads/Video'
alias uu='ranger ~/UPSC'
alias surr='sudo ranger'
# VIM
alias upvim='nvim +PlugInstall +UpdateRemotePlugins +qa'
alias s='cat ~/pass | sudo -S nvim'
alias v='nvim'
alias suvi='sudo nvim'
alias scratch='vim $HOME/Documents/scratch.py'
# EMBY
alias emby-start='systemctl start emby-server.service'
alias emby-stop='systemctl stop emby-server.service'
# ZSH 
alias gg='googler'
alias brb='source ~/.zshrc'
alias swap-sv='rm -R $HOME/.cache/SpaceVim/swap'
alias swap-nv='rm -R $HOME/.cache/nvim/swap'
alias ownit='sudo chmod -R 777'
# SYSTEMCTL 
alias btstart='systemctl enable bluetooth.service && systemctl start bluetooth.service'
alias btstop='systemctl disable bluetooth.service'
alias powertop='sudo powertop'
# APP SHORTCUT
alias idiff='kitty +kitten diff'
alias icat='kitty +kitten icat'
# GLOBPATHLIST
alias ll='k -ha'
alias la='k -ha'
alias j='k -ha'
alias ls='k -h' 
#DIRECTORY
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias doc='cd ~/Documents'
alias dow='cd ~/Downloads'
alias dot='cd ~/.dotfiles'
alias repo='cd /home/Repos/'
alias apy='source /opt/Python/intelpython3/bin/activate'
